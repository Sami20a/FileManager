<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >
    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/quick_access_items_grid_view_spacing"
        android:layout_marginEnd="@dimen/quick_access_items_grid_view_spacing"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="@dimen/default_card_view_elevation"
        >
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding"
            >
            <ImageView
                android:id="@+id/storage_type_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_external_storage"
                />
            <TextView
                android:id="@+id/storage_type_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_padding"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/storage_type_image_view"
                android:textColor="@color/black"
                tools:text="Internal storage"
                />
            <ProgressBar
                android:id="@+id/storage_space_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_padding"
                android:layout_below="@id/storage_type_text_view"
                android:layout_alignStart="@id/storage_type_text_view"
                android:layout_toStartOf="@id/arrow_right_image_view"
                android:layout_centerVertical="true"
                android:progress="50"
                style="?android:attr/progressBarStyleHorizontal"
                />
            <TextView
                android:id="@+id/storage_space_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/storage_space_progress_bar"
                android:layout_alignStart="@id/storage_type_text_view"
                tools:text="4.0 / 11.0 GB"
                />
            <ImageView
                android:id="@+id/arrow_right_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right"
                />
        </RelativeLayout>
    </android.support.design.card.MaterialCardView>
</layout>