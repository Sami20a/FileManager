<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <GridView
            android:id="@+id/quick_access_items_grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/quick_access_items_grid_view_spacing"
            android:verticalSpacing="@dimen/quick_access_items_grid_view_spacing"
            android:horizontalSpacing="@dimen/quick_access_items_grid_view_spacing"
            android:stretchMode="columnWidth"
            />
    </LinearLayout>
</layout>