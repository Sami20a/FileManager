<?xml version="1.0" encoding="utf-8"?>
<com.example.filemanager.view.SquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="@dimen/default_card_view_elevation"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/quick_access_items_padding"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/quick_access_item_icon_image_view"
                android:layout_width="@dimen/quick_access_items_icon_size"
                android:layout_height="@dimen/quick_access_items_icon_size"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/quick_access_item_icon_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/quick_access_items_text_margin_top"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </android.support.design.card.MaterialCardView>
</com.example.filemanager.view.SquareLayout>